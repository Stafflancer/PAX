{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "acf/content-and-card",
    "title": "Content + Card",
    "description": "A custom Content + Card block.",
    "category": "acf",
    "usesContext": [ "allowResize", "imageCrop", "fixedHeight" ],
    "icon": "index-card",
    "keywords": [ "icon", "and", "content" ],
    "acf": {
        "mode": "preview",
        "renderTemplate": "content-and-card.php"
    },
    "attributes": {
        "align": {
            "type": "string",
            "default": "full"
        },
        "alignContent": {
            "type": "string",
            "default": "center left"
        }
    },
    "supports": {
        "color": {
            "background": false,
            "link": false,
            "text": true
        },
        "align": [
            "wide",
            "full"
        ],
        "anchor": true,
        "alignContent": "matrix",
        "alignText": true,
        "fullHeight": true,
        "html": true,
        "jsx": true,
        "multiple": true,
        "reusable": true
    },
    "style": "file:./content-and-card.css"
}